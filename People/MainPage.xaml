<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:People.ViewModels"
             x:Class="People.MainPage"
             Title="Mateo Sotomayor"
             BackgroundColor="#f4f6f9">

    <ContentPage.BindingContext>
        <vm:MainPageViewModel />
    </ContentPage.BindingContext>

    <ScrollView>

        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Header -->
            <Label Text="Mateo Sotomayor" 
               FontSize="32" 
               FontAttributes="Bold" 
               TextColor="Black"
               HorizontalOptions="Center" />
            <Label Text="App para Agregar Personas" 
               FontSize="18" 
               FontAttributes="Italic" 
               TextColor="Gray"
               HorizontalOptions="Center" />

            <!-- Carousel for Profile Image -->
            <CarouselView>
                <CarouselView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>mateoxd.jpg</x:String>
                        <x:String>mateo2.jpg</x:String>
                        <!-- Puedes agregar más imágenes si lo deseas -->
                    </x:Array>
                </CarouselView.ItemsSource>
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding .}" 
                               HeightRequest="200" 
                               WidthRequest="200" 
                               Aspect="AspectFill" 
                               HorizontalOptions="Center" />
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>

            <!-- Profile Information -->
            <Label Text="Mateo Sotomayor" 
                   FontSize="22" 
                   FontAttributes="Bold" 
                   TextColor="Black" 
                   HorizontalOptions="Center" />
            <Label Text="Edad: 22" 
                   FontSize="16" 
                   TextColor="Black" 
                   HorizontalOptions="Center" />

            <!-- Add Person Section -->
            <Frame Padding="20" Margin="0,10" CornerRadius="15" BackgroundColor="#ffffff" BorderColor="#90caf9" HasShadow="True">
                <StackLayout Spacing="15">
                    <Label Text="Agregar Nueva Persona" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="Black" 
                           HorizontalOptions="Center" />
                    <Entry Placeholder="Ingresa el nombre" 
                           Text="{Binding NewPersonName}" 
                           BackgroundColor="White" 
                           PlaceholderColor="Gray"
                           TextColor="Black" 
                           HorizontalOptions="FillAndExpand" />
                    <Button Text="Agregar Persona" 
                            Command="{Binding AddPersonCommand}" 
                            BackgroundColor="#1e88e5" 
                            TextColor="White" 
                            CornerRadius="10"
                            HeightRequest="50" 
                            HorizontalOptions="FillAndExpand" />
                </StackLayout>
            </Frame>

            <!-- List of People -->
            <Label Text="Lista de Personas" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   TextColor="Black" 
                   HorizontalOptions="Center" />
            <ListView ItemsSource="{Binding People}" 
                      BackgroundColor="White" 
                      SeparatorColor="#90caf9"
                      HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame CornerRadius="15" Padding="10" Margin="10" BackgroundColor="#e3f2fd" BorderColor="#90caf9" HasShadow="True">
                                <StackLayout Orientation="Horizontal" Spacing="15">
                                    <Label Text="{Binding Name}" 
                                           VerticalOptions="Center" 
                                           FontSize="16" 
                                           TextColor="Black" 
                                           HorizontalOptions="StartAndExpand" />
                                    <Button Text="Eliminar" 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainPageViewModel}}, Path=DeletePersonCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#e53935" 
                                            TextColor="White" 
                                            CornerRadius="20" 
                                            HeightRequest="40" 
                                            HorizontalOptions="End"
                                            WidthRequest="100"
                                            Padding="5,0" />
                                </StackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
